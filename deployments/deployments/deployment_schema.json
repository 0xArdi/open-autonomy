{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Schema for the deployment configuration file.",
  "additionalProperties": false,
  "type": "object",
  "required": [
    "name",
    "author",
    "version",
    "agent",
    "network",
    "number_of_agents"
  ],
  "properties": {
    "name": {"type": "string"},
    "author": {"type": "string"},
    "version": {"type": "string"},
    "agent": {"type": "string"},
    "number_of_agents": {"type": "integer"},
    "network": {
      "enum": [
        "hardhat",
        "ropsten"
      ]
    }
  }
}
